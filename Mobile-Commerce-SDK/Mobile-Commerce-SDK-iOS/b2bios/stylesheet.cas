HYBOrderConfirmationView {
   background-color: $main_background_transparent;

   UIButton.continueShoppingButton {
        margin-top: $margin*7;
        size: $screen_full_width*.85 $component_height;
        background-color:$main_background_very_light;
        title-color:[state:normal] $main_text_color_primary;
   }

   UILabel.thanksLabel {
        margin-top: $margin;
        size: $screen_full_width*.85 $component_height;
        text-color: $main_text_color_gray;
        font:HelveticaNeue 34;
   }
   UILabel.orderNumberIntroLabel {
        size: $screen_full_width*.23 $component_height*.5;
        text-color: $main_text_color_gray;
        font:$font_medium;
   }
   UIView.orderNumberPanel {
        margin-top:     $margin;
        margin-left:    40;
        size: $screen_full_width*.85 $component_height*.5;
   }
   UILabel.orderNumberLinkLabel {
        size: $screen_full_width*.85 $component_height*.5;
        text-color: $main_text_color_primary;
        font:$font_medium;
   }
   UILabel.emailDetailsLabel {
        margin-top:     $margin;
        size: $screen_full_width*.85 $component_height*.5;
        text-color: $main_text_color_gray;
        font:$font_medium;
   }
   UIView.deliveryMainPanel {
        margin-top:$margin;
        size: $screen_full_width*.85 $component_height*2;
   }
   UIView.deliveryAddressPanel {
        size: $screen_full_width*.4 $component_height*2;
   }
   UIView.deliveryMethodPanel {
        margin-left: $margin*3;
        size: $screen_full_width*.4 $component_height*2;
   }
   UILabel.deliveryAddressTitle, UILabel.deliveryMethodTitle {
        margin-top:0;
        size: $screen_full_width*.4 $component_height;
        text-color: $main_text_color_gray;
        font:HelveticaNeue-Medium 16;
   }
   UILabel.deliveryAddressValue, UILabel.deliveryMethodValue {
        margin-top:0;
        size: $screen_full_width*.4 $component_height * 1;
        text-color: $main_text_color_gray;
        font:HelveticaNeue 16;
   }
   UILabel.deliveryMethodValue {
        margin-top:-18;
   }
   UIView.orderSummaryView {
        margin-top:     $margin;
        background-color: $main_background_very_light;
        size: $screen_full_width $component_height*4;
   }
   UITableView.itemsTable {
        margin-top:$margin*15;
        size: $screen_full_width 350;
        background-color: $main_background_very_light;
        separatorColor:$main_background_very_light;
        HYBCartItemCellView {
           background-color: $main_background_transparent;
        }
   }
}