<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-45%"
            android:pivotY="90%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <stroke
                    android:width="10dp"
                    android:color="@color/tooltip_backgound" />

                <solid android:color="@color/tooltip_backgound" />
            </shape>
        </rotate>
    </item>

</layer-list>